<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReckonMe.Views.Expenses.ExpensesPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add expense" Clicked="AddExpense_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Edit" Grid.Row="0" Clicked="EditButton_Clicked" Grid.Column="0" Style="{StaticResource BlueButton}" />
            <Button Text="Delete" Grid.Row="0" Clicked="DeleteButton_Clicked" Grid.Column="1" Style="{StaticResource RedButton}" />

            <ListView x:Name="ExpensesListView"                  
                      ItemsSource="{Binding Expenses}"
                      VerticalOptions="FillAndExpand"
                      HasUnevenRows="true"
                      RefreshCommand="{Binding LoadExpensesCommand}"
                      IsPullToRefreshEnabled="true"
                      IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                      CachingStrategy="RecycleElement"
				      ItemSelected="OnExpenseSelected"
                      Grid.Row="1"
                      Grid.ColumnSpan="2">
                <ListView.Header>
                    <StackLayout Padding="10" BackgroundColor="{StaticResource LightBackgroundColor}">
                        <Label Text="Expenses" FontSize="Medium" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="OnMore" CommandParameter="{Binding .}"
                                          Text="More" />
                                <MenuItem Clicked="OnDelete" CommandParameter="{Binding .}"
                                          Text="Delete" IsDestructive="True" />
                            </ViewCell.ContextActions>

                            <StackLayout Orientation="Horizontal" Padding="10">
                                <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Name}" 
                                       FontSize="16"
                                       Style="{DynamicResource ListItemTextStyle}"
                                       LineBreakMode="NoWrap"/>
                                <Label Text="{Binding Description}"
                                       FontSize="13"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       LineBreakMode="NoWrap"/>
                                <Label Text="{Binding Value}"
                                       FontSize="13"
                                       Style="{DynamicResource ListItemDetailTextStyle}"
                                       LineBreakMode="NoWrap"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>