<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReckonMe.Views.Expenses.EditExpensePage"
             Title="Edit Expense">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Expense name:" FontSize="Medium" />
            <Entry Text="{Binding Expense.Name}" FontSize="Small" />
            <Label Text="Description:" FontSize="Medium" />
            <Editor Text="{Binding Expense.Description}" FontSize="Small" Margin="0" />
            <Label Text="Cost:" FontSize="Medium" />
            <Editor Text="{Binding Expense.Value}" FontSize="Small" Margin="0" Keyboard="Numeric"/>
            <Label Text="Payer:" FontSize="Medium" />
            <Editor Text="{Binding Expense.Payer}" FontSize="Small" Margin="0" />
            <Label Text="Members:" FontSize="Medium" />
            <Editor Text="{Binding Members}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>