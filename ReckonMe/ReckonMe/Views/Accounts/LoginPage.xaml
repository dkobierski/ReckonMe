<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReckonMe.Views.Accounts.LoginPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Załóż konto" Clicked="OnSignUpClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Nazwa użytkownika:" />
            <Entry x:Name="UsernameEntry" Placeholder="username" Text="mm" />
            <Label Text="Hasło:" />
            <Entry x:Name="PasswordEntry" IsPassword="true" Text="mm" />
            <Button Text="Zaloguj" Clicked="OnLoginClicked" Style="{StaticResource GreenButton}" />
            <Label x:Name="MessageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>